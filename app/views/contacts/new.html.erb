<% provide(:title, 'Add a contact') %>
<h1>Add a new Contact</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@contact) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :phone %>
      <%= f.text_field :phone %>

      <%= f.submit "Save", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>